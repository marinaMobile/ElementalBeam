<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".policy.RedirAct"
    android:background="@drawable/bababa">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#11126C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/bg_sec_clr_win"
                android:text="@string/app_name"/>

            <androidx.cardview.widget.CardView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icooon"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/firstBtn"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5279C8"
                    android:textColor="@color/bg_sec_clr_win"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Lucky spin" />

    <Button
        android:id="@+id/secBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:backgroundTint="#5279C8"
        android:textColor="@color/bg_sec_clr_win"
        android:fontFamily="@font/open_sans_bold"
        android:text="Spin &amp; win"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
        android:id="@+id/polBtn"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
                android:textColor="@color/bg_sec_clr_win"
                android:fontFamily="@font/open_sans_bold"
                android:backgroundTint="#5279C8"
        android:text="Privacy Policy"/>

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>